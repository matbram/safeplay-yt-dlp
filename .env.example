# Server
PORT=3002
ENVIRONMENT=development

# Supabase
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# OxyLabs Residential Proxies
OXYLABS_USERNAME=your_username
OXYLABS_PASSWORD=your_password

# Internal Authentication
API_KEY=your-internal-api-key-shared-with-orchestration

# Optional: Temp storage path
TEMP_DIR=/tmp/safeplay-downloads

# ============================================================================
# AI AGENT CONFIGURATION
# ============================================================================

# LLM Providers (at least one required for agent)
# Claude (Anthropic) - Better at code reasoning
ANTHROPIC_API_KEY=sk-ant-...

# Gemini (Google) - More cost-effective for high volume
GOOGLE_API_KEY=AIza...

# Default LLM provider: 'claude' or 'gemini'
LLM_PROVIDER=gemini

# Models to use
LLM_MODEL_ANALYSIS=gemini-1.5-flash
LLM_MODEL_SYNTHESIS=gemini-1.5-pro

# Downloader connection (for agent to monitor)
DOWNLOADER_URL=http://localhost:3002
DOWNLOADER_API_KEY=your-internal-api-key-shared-with-orchestration

# Git configuration for auto-fixes
GIT_REPO_PATH=/opt/safeplay-ytdlp
GIT_BRANCH=agent/auto-fixes
GIT_AUTO_PUSH=true
GIT_REMOTE=origin

# Email alerting (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_FROM=safeplay-agent@yourdomain.com
ALERT_EMAIL_TO=admin@yourdomain.com

# SafePlay website integration (optional)
SAFEPLAY_WEBSITE_URL=https://your-safeplay-website.com
SAFEPLAY_WEBSITE_API_KEY=your-website-api-key

# Rate limits (liberal for testing)
MAX_FIX_ATTEMPTS_PER_HOUR=20
MAX_LLM_CALLS_PER_HOUR=100
MAX_RETRIES_PER_JOB=5

# Intervals
HEALTH_CHECK_INTERVAL_SECONDS=300
PATTERN_RECOMPUTE_INTERVAL_HOURS=6
TELEMETRY_RETENTION_DAYS=30

# Agent paths
AGENT_LOG_DIR=/var/log/safeplay-agent
JOURNAL_OUTPUT_PATH=/opt/safeplay-ytdlp/docs/YOUTUBE_LEARNINGS.md

# Service restart (requires sudoers configuration)
DOWNLOADER_SERVICE_NAME=safeplay-ytdlp
SUDO_RESTART_COMMAND=sudo systemctl restart safeplay-ytdlp
